<form hx-put="/api/product_category/<%= category.id %>" hx-target="this" hx-swap="none">
    <div class="row">
        <input type="hidden" id="category_id" name="category_id" value="<%= category.id %>">
        
        <label for="name">Category Name</label>
        <div class="input-group col-sm-6 mb-3">
            <input type="text" name="name" id="name" class="form-control" placeholder="Category name" value="<%= category.name %>" required>
        </div>

        <label for="type">Type</label>
        <div class="input-group col-sm-6 mb-3">
            <select class="form-select" name="type" id="type" required>
                <% product_types.forEach(type => { %>
                    <option value="<%=type.id%>" <%= category.product_type_id === type.id ? 'selected' : '' %>><%=type.name%></option>
                <% }); %>
            </select>
        </div>

        <!-- Error message area -->
        <div id="error-message" class="d-none text-danger fw-bold">
            
        </div>

        <div class="text-center ">
            <button type="submit" class="submit_btn btn btn-md bg_black text-white  mb-0 ">Submit</button>
        </div>
    </div>
</form>

<script>
    $("#category-modal-title").text("<%=form_title%>");

    htmx.on('htmx:beforeRequest', function () {
        // Disable the submit button to prevent multiple clicks
        $('.submit_btn').disabled = true;
    });

    htmx.on('htmx:afterRequest', (e) => {
        
        $('.submit_btn').disabled = false; // Enable the submit button

        if(e.detail.xhr.responseURL.includes("/api/product_category/<%= category.id %>") && e.detail.xhr.status === 200) {
            $("#error-message").addClass("d-none");
            $("#error-message").html("");

            $("#dialog").modal('hide');
            $(".toast-success-body").text("category updated successfully");
            $(".toast-success").show();
            
            setTimeout(() => {
                location.reload();
                $(".toast-success-body").text("");
                $(".toast-success").hide();
            }, 1000);
        }
       
    });

    htmx.on('htmx:responseError', (e) => {
        const url = e.detail.xhr.responseURL;
        const status = e.detail.xhr.status;

        if (url.includes("/api/product_category/<%= category.id %>")) {
            if (status === 400) {
                // Edit form error handling
                $("#error-message").removeClass("d-none");
                let message = JSON.parse(e.detail.xhr.responseText).error;
                $("#error-message").html(message);

                setTimeout(() => {
                    $("#error-message").addClass("d-none");
                    $("#error-message").html("");
                }, 5000);
            }

        }
    });

</script>