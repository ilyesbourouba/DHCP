                console.log("message => ", message);
                $("#add-error-message").html(message);

                setTimeout(() => {
                    $("#add-error-message").addClass("d-none");
                    $("#add-error-message").html("");
                }, 5000);
            }
            else
            {
                console.log("false");
            }

        }
    });
</script>
<script>
    $(".modal-title").text("<%=form_title%>");

    $('form.multi-form a.next').click(function(event) {
        event.preventDefault();  // Prevent the default button behavior
        
        let currentFieldset = $('fieldset.active');
        let isValid = true;
        
        // Loop through all required inputs within the current fieldset
        currentFieldset.find(':input[required]').each(function() {
            if (!this.value) {
                isValid = false;
                $(this).addClass('is-invalid');  // Add invalid class if input is not filled
            } else {
                $(this).removeClass('is-invalid');  // Remove invalid class if input is filled
            }
        });

        // Proceed to the next fieldset if all required fields are valid
        if (isValid) {
            currentFieldset.removeClass('active').next('fieldset').addClass('active');
        } else {
            $("#add-error-message").html("Please fill in all required fields.").removeClass("d-none");
            setTimeout(function() {
                $("#add-error-message").html("").addClass("d-none");
            }, 3000);
        }
    });

    $('form.multi-form a.prev').click(function() {
        $('fieldset.active').removeClass('active')
        .prev('fieldset').addClass('active');
    });
</script>

