<form hx-put="/api/workshop/<%= workshop.id %>" hx-target="this" hx-swap="none">
    <div class="row">
        <input type="hidden" id="workshop_id" name="workshop_id" value="<%= workshop.id %>">
        
        <label for="name">Workshop Name</label>
        <div class="input-group col-sm-6 mb-3">
            <input type="text" name="name" id="name" class="form-control" placeholder="Workshop name" value="<%= workshop.name %>" required>
        </div>

        <label for="zone">Zone</label>
        <div class="input-group col-sm-6 mb-3">
            <select class="form-select" name="zone" id="zone" required>
                <option value="" >Select Zone</option>
                <% zones.forEach(zone => { %>
                    <option value="<%=zone.id%>" <%= workshop.zone_id === zone.id ? 'selected' : '' %>><%=zone.name%></option>
                <% }); %>
            </select>
        </div>

        <!-- Error message area -->
        <div id="error-message" class="d-none text-danger fw-bold">
            
        </div>

        <div class="text-center ">
            <button type="submit" class="submit_btn btn btn-md bg_black text-white  mb-0 ">Submit</button>
        </div>
    </div>
</form>

<script>
    $("#workshop-modal-title").text("<%=form_title%>");

    htmx.on('htmx:beforeRequest', function () {
        // Disable the submit button to prevent multiple clicks
        $('.submit_btn').disabled = true;
    });

    htmx.on('htmx:afterRequest', (e) => {
        
        $('.submit_btn').disabled = false; // Enable the submit button

        if(e.detail.xhr.responseURL.includes("/api/workshop/<%= workshop.id %>") && e.detail.xhr.status === 200) {
            $("#error-message").addClass("d-none");
            $("#error-message").html("");

            $("#workshop_dialog").modal('hide');
            $(".toast-success-body").text("workshop updated successfully");
            $(".toast-success").show();
            
            setTimeout(() => {
                location.reload();
                $(".toast-success-body").text("");
                $(".toast-success").hide();
            }, 1000);
        }
       
    });

    htmx.on('htmx:responseError', (e) => {
        const url = e.detail.xhr.responseURL;
        const status = e.detail.xhr.status;

        if (url.includes("/api/workshop/<%= workshop.id %>")) {
            if (status === 400) {
                // Edit form error handling
                $("#error-message").removeClass("d-none");
                let message = JSON.parse(e.detail.xhr.responseText).error;
                $("#error-message").html(message);

                setTimeout(() => {
                    $("#error-message").addClass("d-none");
                    $("#error-message").html("");
                }, 5000);
            }

        }
    });

</script>